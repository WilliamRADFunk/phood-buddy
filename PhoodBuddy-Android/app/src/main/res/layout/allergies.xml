<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corn"
        android:textColor="@color/white"
        android:id="@+id/radioButton"
        android:layout_above="@+id/radioButton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meat allergy"
        android:textColor="@color/white"
        android:id="@+id/radioButton6"
        android:layout_gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/radioButton3"
        android:layout_alignParentRight="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peanut"
        android:textColor="@color/white"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/radioButton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tree nuts"
        android:textColor="@color/white"
        android:id="@+id/radioButton3"
        android:layout_below="@+id/radioButton5"
        android:layout_alignLeft="@+id/radioButton6"
        android:layout_alignStart="@+id/radioButton6" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milk"
        android:textColor="@color/white"
        android:id="@+id/radioButton4"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Egg"
        android:textColor="@color/white"
        android:id="@+id/radioButton5"
        android:layout_marginTop="139dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/radioButton6"
        android:layout_alignStart="@+id/radioButton6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Allergies"
        android:textColor="@color/white"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fish"
        android:textColor="@color/white"
        android:id="@+id/radioButton7"
        android:layout_below="@+id/radioButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shell Fish"
        android:textColor="@color/white"
        android:id="@+id/radioButton8"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioButton7"
        android:layout_alignParentLeft="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sesame"
        android:textColor="@color/white"
        android:id="@+id/radioButton9"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioButton8"
        android:layout_alignParentLeft="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gluten"
        android:textColor="@color/white"
        android:id="@+id/radioButton10"
        android:layout_alignTop="@+id/radioButton7"
        android:layout_alignLeft="@+id/radioButton6"
        android:layout_alignStart="@+id/radioButton6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/button2"
        android:layout_below="@+id/radioButton9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/radioButton10"
        android:layout_alignStart="@+id/radioButton10"
        android:background="@drawable/button_border" />

</RelativeLayout>
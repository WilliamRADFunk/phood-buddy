<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageButton
            android:layout_width="979dp"
            android:layout_height="50dp"
            android:id="@+id/myProfile"
            android:paddingBottom="20dp"
            android:background="#4585a2"
            android:layout_marginTop="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="979dp"
            android:layout_height="50dp"
            android:id="@+id/favRecipes"
            android:paddingTop="20dp"
            android:background="@drawable/button_border_primary"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/myProfile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="979dp"
            android:layout_height="50dp"
            android:id="@+id/tasteProfile"
            android:background="@drawable/button_border_primary"
            android:paddingTop="20dp"
            android:layout_below="@+id/favRecipes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="979dp"
            android:layout_height="50dp"
            android:paddingTop="20dp"
            android:id="@+id/healthProfile"
            android:background="@drawable/button_border_primary"
            android:layout_below="@+id/tasteProfile"
            android:layout_alignRight="@+id/logout"
            android:layout_alignEnd="@+id/logout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TASTE PROFILE"
            android:id="@+id/textView24"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/myProfile"
            android:layout_alignLeft="@+id/textView25"
            android:layout_alignStart="@+id/textView25"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MY FAVORITE RECIPES"
            android:id="@+id/textView25"
            android:layout_alignTop="@+id/favRecipes"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MY PROFILE"
            android:id="@+id/textView26"
            android:textColor="#000000"
            android:layout_alignTop="@+id/tasteProfile"
            android:layout_alignLeft="@+id/textView25"
            android:layout_alignStart="@+id/textView25"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MY HEALTH PROFILE"
            android:id="@+id/textView27"
            android:textColor="#000000"
            android:layout_alignTop="@+id/healthProfile"
            android:layout_alignLeft="@+id/textView26"
            android:layout_alignStart="@+id/textView26"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView12"
            android:src="@drawable/food"
            android:layout_alignBottom="@+id/favRecipes"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:tint="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView13"
            android:src="@drawable/grocery"
            android:layout_alignTop="@+id/myProfile"
            android:layout_alignRight="@+id/imageView11"
            android:layout_alignEnd="@+id/imageView11"
            android:layout_alignBottom="@+id/myProfile" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView14"
            android:src="@drawable/health"
            android:tint="#000000"
            android:layout_alignTop="@+id/healthProfile"
            android:layout_alignLeft="@+id/imageView12"
            android:layout_alignStart="@+id/imageView12"
            android:layout_alignBottom="@+id/healthProfile" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:src="@drawable/profile"
            android:tint="#000000"
            android:layout_alignBottom="@+id/tasteProfile"
            android:layout_alignRight="@+id/imageView14"
            android:layout_alignEnd="@+id/imageView14"
            android:layout_below="@+id/favRecipes" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView16"
            android:src="@drawable/line"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="92dp"
            android:layout_below="@+id/healthProfile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Personal Information"
            android:id="@+id/textView38"
            android:textColor="#4585a2"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/imageView16"
            android:layout_alignLeft="@+id/imageView11"
            android:layout_alignStart="@+id/imageView11" />

        <ImageButton
            android:layout_width="979dp"
            android:layout_height="50dp"
            android:id="@+id/logout"
            android:layout_weight="0.06"
            android:background="@drawable/button_border_primary"
            android:layout_below="@+id/healthProfile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView17"
            android:src="@drawable/logout"
            android:layout_alignLeft="@+id/imageView14"
            android:layout_alignStart="@+id/imageView14"
            android:layout_alignBottom="@+id/logout"
            android:tint="#000000"
            android:layout_alignTop="@+id/logout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="LOGOUT"
            android:id="@+id/textView40"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/logout"
            android:layout_alignLeft="@+id/textView27"
            android:layout_alignStart="@+id/textView27"
            android:layout_marginBottom="13dp" />

        <org.eazegraph.lib.charts.PieChart
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/piechart"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="8dp"
            app:egLegendTextSize="15sp"
            app:egUsePieRotation="true"
            app:egValueTextSize="36sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView16" />

    </RelativeLayout>

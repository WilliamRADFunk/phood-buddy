<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phoodbuddy.phoodbuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.myschoolflow.schoolflow.permission.SET_ALARM" />

    <activity android:name="com.facebook.FacebookActivity" />

    <meta-data
        android:name="io.fabric.ApiKey"
        android:value="40aef9f2ed56dbe6483cc69a101e2809df36e495" />

    <application
        android:name="com.phoodbuddy.phoodbuddy.Service.firebase"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.splash_screen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.shopping_list"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.intro"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Get Fit Bit User Data -->
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Service.fitbit"
            android:label="Fitbit" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="fitbit"
                    android:scheme="temboo" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.setup"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.settings"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.recipes"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.login"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.health_profile"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.deals"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.dashboard"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Fragments.shopping_list_detail"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.planner"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.recipe_detail"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.phoodbuddy.phoodbuddy.Activities.recipes"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.recipes" />
        </activity>
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Controllers.LoginController"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.FavRecipes"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.phoodbuddy.phoodbuddy.Activities.settings"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.settings" />
        </activity>
        <activity
            android:name="com.phoodbuddy.phoodbuddy.Activities.TasteProfile"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity android:name="com.phoodbuddy.phoodbuddy.Service.TwitterOAuthActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="40aef9f2ed56dbe6483cc69a101e2809df36e495" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>